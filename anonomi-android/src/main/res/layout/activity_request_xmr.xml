<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center_horizontal">

		<ProgressBar
			android:id="@+id/progressSpinner"
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="gone"
			android:layout_marginTop="20dp"/>

		<!-- XMR Amount -->
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_amount"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginTop="8dp"/>

		<EditText
			android:id="@+id/editAmount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/request_xmr_amount_hint"
			android:inputType="numberDecimal"
			android:layout_marginTop="4dp"/>

		<!-- Fiat Rate -->
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_fiat_rate"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginTop="16dp"/>

		<EditText
			android:id="@+id/editRate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/request_xmr_fiat_rate_hint"
			android:inputType="numberDecimal"
			android:layout_marginTop="4dp"/>

		<!-- Converted Amount -->
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_converted_amount"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginTop="16dp"/>

		<EditText
			android:id="@+id/conversionTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/request_xmr_converted_amount_hint"
			android:inputType="numberDecimal"
			android:layout_marginTop="4dp"/>

		<!-- Optional Message -->
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_optional_message"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginTop="16dp"/>

		<EditText
			android:id="@+id/editMessage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/request_xmr_optional_message_hint"
			android:inputType="textCapSentences"
			android:maxLength="100"
			android:layout_marginTop="4dp"/>

		<!-- Subaddress Mode -->
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_subaddress_mode"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginTop="16dp"/>

		<RadioGroup
			android:id="@+id/modeRadioGroup"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="4dp">

			<RadioButton
				android:id="@+id/radioSequential"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="@string/request_xmr_sequential"/>

			<RadioButton
				android:id="@+id/radioManual"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/request_xmr_manual"
				android:layout_marginStart="16dp"/>
		</RadioGroup>

		<EditText
			android:id="@+id/editManualIndex"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/request_xmr_manual_index_hint"
			android:inputType="number"
			android:maxLength="7"
			android:layout_marginTop="4dp"
			android:visibility="gone"/>

		<!-- Buttons -->
		<Button
			android:id="@+id/buttonGenerate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_generate_qr_code"
			android:layout_marginTop="20dp"/>

		<TextView
			android:id="@+id/minorIndexTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textSize="28sp"
			android:textStyle="bold"
			android:textColor="?attr/anonAccentColor"
			android:text="#"
			android:visibility="gone" />

		<Button
			android:id="@+id/buttonSend"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/request_xmr_send"
			android:layout_marginTop="8dp"/>

		<!-- QR Code -->
		<ImageView
			android:id="@+id/qrImageView"
			android:layout_width="300dp"
			android:layout_height="300dp"
			android:layout_marginTop="24dp"
			android:scaleType="fitCenter"/>

	</LinearLayout>

</ScrollView>