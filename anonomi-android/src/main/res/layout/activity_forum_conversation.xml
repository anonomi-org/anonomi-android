<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".android.forum.ForumActivity">

	<include layout="@layout/toolbar" />

	<TextView
		android:id="@+id/walkieTalkieBar"
		android:layout_width="match_parent"
		android:layout_height="28dp"
		android:background="?attr/colorPrimary"
		android:gravity="center"
		android:text="@string/walkie_talkie_bar_text"
		android:textColor="@android:color/white"
		android:textSize="12sp"
		android:visibility="gone" />

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/thread_item_background">

		<org.anonomi.android.view.BriarRecyclerView
			android:id="@+id/list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:emptyText="@string/no_forum_posts"
			app:scrollToEnd="false" />

		<org.anonomi.android.view.UnreadMessageButton
			android:id="@+id/upButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|right|end"
			app:direction="up" />

		<org.anonomi.android.view.UnreadMessageButton
			android:id="@+id/downButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right|end"
			app:direction="down" />

	</FrameLayout>

	<TextView
		android:id="@+id/slideToCancelText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/slide_to_cancel"
		android:textColor="@android:color/white"
		android:background="@drawable/rounded_cancel_background"
		android:padding="8dp"
		android:layout_gravity="center_horizontal"
		android:visibility="gone" />

	<include layout="@layout/include_image_preview" />

	<org.anonomi.android.view.TextInputView
		android:id="@+id/text_input_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:hint="@string/forum_new_message_hint" />

</LinearLayout>
